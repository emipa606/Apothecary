      <li>
        <filter>
          <thingDefs>
            <li>AYSalt</li>
            <li>AYCalciumCarbonate</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
