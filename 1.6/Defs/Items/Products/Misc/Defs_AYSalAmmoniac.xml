<Defs>
  <ThingDef ParentName="ResourceBase">
    <defName>AYSalAmmoniac</defName>
    <label>Sal ammoniac</label>
    <description>Sal ammoniac is a mineral salt which is ammonium chloride. The mineral is commonly formed on burning coal/charcoal from the condensation of derived gases</description>
    <graphicData>
      <texPath>Things/Item/Resource/Misc/AYSalAmmoniac/AYSalAmmoniac</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <stackLimit>150</stackLimit>
    <statBases>
      <MarketValue>3.0</MarketValue>
      <Mass>0.05</Mass>
      <Flammability>0.8</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <thingCategories Inherit="false">
      <li>AYProducts</li>
    </thingCategories>
  </ThingDef>
