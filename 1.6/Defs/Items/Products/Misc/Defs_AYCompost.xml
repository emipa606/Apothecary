<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ResourceBase">
    <defName>AYCompost</defName>
    <label>Potting Compost</label>
    <description>A medium made from organic materials to be fermented into planting material.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Misc/AYCompost/AYCompost</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stackLimit>200</stackLimit>
    <statBases>
      <MarketValue>0.75</MarketValue>
      <Mass>0.02</Mass>
      <Flammability>0.9</Flammability>
      <DeteriorationRate>1.5</DeteriorationRate>
    </statBases>
    <thingCategories Inherit="false">
      <li>AYProducts</li>
    </thingCategories>
    <tickerType>Rare</tickerType>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>96</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>
  <RecipeDef>
    <defName>MakeAYCompost</defName>
    <label>Make Potting compost</label>
    <description>Make 10 Potting compost</description>
    <jobString>Making Potting compost</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>500</workAmount>
    <targetCountAdjustment>10</targetCountAdjustment>
    <workSkill>Cooking</workSkill>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Hay</li>
            <li>AYAmmoniaHay</li>
            <li>AYNettleLeaves</li>
            <li>AYKaleLeaves</li>
            <li>AYWoodAshes</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>PlantFoodRaw</li>
      </categories>
      <disallowedCategories>
        <li>AYPowders</li>
      </disallowedCategories>
      <thingDefs>
        <li>Hay</li>
        <li>AYAmmoniaHay</li>
        <li>AYNettleLeaves</li>
        <li>AYKaleLeaves</li>
        <li>AYWoodAshes</li>
      </thingDefs>
      <disallowedThingDefs>
        <li>AYGarlicPowder</li>
        <li>AYGingerPowder</li>
      </disallowedThingDefs>
    </fixedIngredientFilter>
    <products>
      <AYCompost>10</AYCompost>
    </products>
    <recipeUsers>
      <li>ButcherSpot</li>
      <li>TableButcher</li>
    </recipeUsers>
    <skillRequirements>
      <Cooking>2</Cooking>
    </skillRequirements>
    <researchPrerequisite>AYHerbsSimple</researchPrerequisite>
  </RecipeDef>
  <RecipeDef>
    <defName>MakeBulkAYCompost</defName>
    <label>Make Potting compost in bulk</label>
    <description>Make 25 Potting compost</description>
    <jobString>Making Potting compost</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1250</workAmount>
    <targetCountAdjustment>25</targetCountAdjustment>
    <workSkill>Cooking</workSkill>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>12</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Hay</li>
            <li>AYAmmoniaHay</li>
            <li>AYNettleLeaves</li>
            <li>AYKaleLeaves</li>
            <li>AYWoodAshes</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>PlantFoodRaw</li>
      </categories>
      <disallowedCategories>
        <li>AYPowders</li>
      </disallowedCategories>
      <thingDefs>
        <li>Hay</li>
        <li>AYAmmoniaHay</li>
        <li>AYNettleLeaves</li>
        <li>AYKaleLeaves</li>
        <li>AYWoodAshes</li>
      </thingDefs>
      <disallowedThingDefs>
        <li>AYGarlicPowder</li>
        <li>AYGingerPowder</li>
      </disallowedThingDefs>
    </fixedIngredientFilter>
    <products>
      <AYCompost>25</AYCompost>
    </products>
    <recipeUsers>
      <li>ButcherSpot</li>
      <li>TableButcher</li>
    </recipeUsers>
    <skillRequirements>
      <Cooking>3</Cooking>
    </skillRequirements>
    <researchPrerequisite>AYHerbsSimple</researchPrerequisite>
  </RecipeDef>
</Defs>