          <thingDefs>
            <li>AYYarrowOil</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MedicineHerbal</li>
        <li>AYTallow</li>
        <li>AYAloeOil</li>
        <li>AYYarrowOil</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <AYScarCream>1</AYScarCream>
    </products>
    <recipeUsers>
      <li>AYApothecaryTable</li>
    </recipeUsers>
    <skillRequirements>
