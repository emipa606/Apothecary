    <description>Make 5 Aloe Cream.</description>
    <jobString>Making Aloe Cream</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1250</workAmount>
    <targetCountAdjustment>5</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MedicineHerbal</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>AYTallow</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>AYAloeOil</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MedicineHerbal</li>
        <li>AYTallow</li>
        <li>AYAloeOil</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <AYAloeCream>5</AYAloeCream>
    </products>
    <recipeUsers>
      <li>AYApothecaryTable</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>5</Intellectual>
    </skillRequirements>
    <researchPrerequisite>AYOintments</researchPrerequisite>
  </RecipeDef>
</Defs>
