<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="AYDrugTonicBase">
    <defName>AYFluTonic</defName>
    <label>Flu Tonic</label>
    <description>A concoction of herbs that help ward off flu. Effects last for 3 days.</description>
    <graphicData>
      <texPath>Things/Item/Drug/Tonic/AYFluTonic/AYFluTonic</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>200</WorkToMake>
      <MarketValue>22.1</MarketValue>
      <Mass>0.2</Mass>
    </statBases>
    <techLevel>Medieval</techLevel>
    <ingestible>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>AYFluTonicHigh</hediffDef>
          <severity>3.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>3999</listOrder>
        <overdoseSeverityOffset>
          <min>0.01</min>
          <max>0.03</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
  <HediffDef>
    <defName>AYFluTonicHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Flu Tonic</label>
    <description>Flu tonic effect</description>
    <defaultLabelColor>(0.23, 0.64, 0.52)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>3.0</maxSeverity>
    <lethalSeverity>-1.0</lethalSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.95</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <lifeThreatening>false</lifeThreatening>
        <makeImmuneTo>
          <li>Flu</li>
        </makeImmuneTo>
      </li>
    </stages>
  </HediffDef>
  <!-- ====== Recipes ====== -->
  <RecipeDef>
    <defName>MakeAYFluTonic</defName>
    <label>Make Flu Tonic</label>
    <description>Make 1 Flu Tonic.</description>
    <jobString>Making Flu Tonic</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>250</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>AYKalePowder</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>AYGarlicPowder</li>
            <li>AYGingerPowder</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>AYNettlePowder</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>AYStarAniseOil</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>AYKalePowder</li>
        <li>AYGarlicPowder</li>
        <li>AYGingerPowder</li>
        <li>AYNettlePowder</li>
        <li>AYStarAniseOil</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <AYFluTonic>1</AYFluTonic>
    </products>
    <recipeUsers>
      <li>AYApothecaryTable</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>4</Intellectual>
    </skillRequirements>
    <researchPrerequisite>AYTonics</researchPrerequisite>
  </RecipeDef>
  <!-- ===== Bulk Recipe ========= -->
