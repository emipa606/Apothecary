<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>AYCandle</defName>
    <label>Candle</label>
    <description>A tallow candle for lighting an area. People need light to move and work at full speed. Can be automatically refueled with tallow. Produces a small amount of heat.</description>
    <category>Building</category>
    <graphicData>
      <texPath>Things/Building/AYCandle/AYCandle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawRotated>false</drawRotated>
      <damageData>
        <rect>(0.35,0.35,0.3,0.3)</rect>
      </damageData>
    </graphicData>
    <rotatable>false</rotatable>
    <altitudeLayer>Item</altitudeLayer>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <passability>PassThroughOnly</passability>
    <pathCost>5</pathCost>
    <clearBuildingArea>false</clearBuildingArea>
    <canOverlapZones>false</canOverlapZones>
    <blockWind>false</blockWind>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <isInert>true</isInert>
      <isEdifice>false</isEdifice>
      <canPlaceOverWall>false</canPlaceOverWall>
    </building>
    <constructEffect>ConstructWood</constructEffect>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <fillPercent>0.10</fillPercent>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
    <statBases>
      <Mass>1.5</Mass>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>120</WorkToBuild>
      <Flammability>0.7</Flammability>
    </statBases>
    <selectable>true</selectable>
    <costList>
      <AYTallow>20</AYTallow>
      <Cloth>2</Cloth>
    </costList>
    <soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <resourcesFractionWhenDeconstructed>0.75</resourcesFractionWhenDeconstructed>
    <!-- <placeWorkers> -->
    <!-- <li>Apothecary.PlaceWorker_Candle</li> -->
    <!-- </placeWorkers> -->
    <!--
    	<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		-->
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>1</fuelConsumptionRate>
        <fuelCapacity>20.0</fuelCapacity>
        <fuelConsumptionPerTickInRain>0.0001</fuelConsumptionPerTickInRain>
        <fuelFilter>
          <thingDefs>
            <li>AYTallow</li>
          </thingDefs>
        </fuelFilter>
        <initialFuelPercent>1</initialFuelPercent>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>8</glowRadius>
        <glowColor>(255,190,115,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>1.5</heatPerSecond>
        <heatPushMaxTemperature>22</heatPushMaxTemperature>
      </li>
      <li Class="CompProperties_FireOverlay">
        <fireSize>0.2</fireSize>
        <offset>(0,0,0.2)</offset>
      </li>
    </comps>
    <designationCategory>Furniture</designationCategory>
    <researchPrerequisites>
      <li>AYTallow</li>
    </researchPrerequisites>
  </ThingDef>
  <RecipeDef>
    <defName>MakeAYCandleSingle</defName>
    <label>Make Candles</label>
    <description>Make 1 Candle</description>
    <jobString>Making Candles</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>ButcherFlesh</effectWorking>
    <soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>300</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <workSkill>Cooking</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>AYTallow</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Cloth</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>AYTallow</li>
        <li>Cloth</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <AYCandle>1</AYCandle>
    </products>
    <recipeUsers>
      <li>CraftingSpot</li>
      <li>ButcherSpot</li>
      <li>TableButcher</li>
      <li>AYApothecaryTable</li>
    </recipeUsers>
    <skillRequirements>
      <Cooking>3</Cooking>
    </skillRequirements>
    <researchPrerequisite>AYTallow</researchPrerequisite>
  </RecipeDef>
</Defs>