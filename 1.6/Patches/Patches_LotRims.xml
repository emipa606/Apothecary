    <mods>
      <li>Lord of the Rims - The Third Age</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="LotR_TableSmithy"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs</xpath>
          <value>
            <li>AYCharcoal</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>