<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="AYDrugTeaBase">
    <defName>AYKaleTea</defName>
    <label>Kale Tea</label>
    <description>Kale tea, packed with vitamins. Can ward off food poisoning and the flu. Effects last about a day.</description>
    <graphicData>
      <texPath>Things/Item/Drug/Tea/AYKaleTea</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>200</WorkToMake>
      <MarketValue>2.75</MarketValue>
      <!-- GP: 25 x 0.11 -->
      <Mass>0.1</Mass>
    </statBases>
    <techLevel>Neolithic</techLevel>
    <ingestible>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>AYKaleTeaHigh</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>3599</listOrder>
        <overdoseSeverityOffset>
          <min>0.01</min>
          <max>0.03</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
  <HediffDef>
    <defName>AYKaleTeaHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Kale Tea</label>
    <description>Kale tea effect</description>
    <defaultLabelColor>(0.23, 0.64, 0.52)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <lethalSeverity>-1.0</lethalSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.95</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <lifeThreatening>false</lifeThreatening>
        <statOffsets>
          <ToxicSensitivity>-0.02</ToxicSensitivity>
        </statOffsets>
        <makeImmuneTo>
          <li>FoodPoisoning</li>
          <li>Flu</li>
        </makeImmuneTo>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>+0.03</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <!-- ====== Recipes ====== -->
  <RecipeDef>
    <defName>MakeAYKaleTea</defName>
    <label>Make Kale Tea</label>
    <description>Make 1 Kale Tea.</description>
    <jobString>Making Kale Tea</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>150</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>AYKalePowder</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>AYKalePowder</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <AYKaleTea>1</AYKaleTea>
    </products>
    <recipeUsers>
      <li>AYApothecaryTable</li>
      <li>Campfire</li>
      <li>FueledStove</li>
      <li>ElectricStove</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>2</Intellectual>
    </skillRequirements>
    <researchPrerequisite>AYTeas</researchPrerequisite>
  </RecipeDef>
  <!-- ===== Bulk Recipe ========= -->
  <RecipeDef>
    <defName>MakeBulkAYKaleTea</defName>
    <label>Make Kale Tea in bulk</label>
    <description>Make 5 Kale Teas.</description>
    <jobString>Making Kale Tea</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>750</workAmount>
    <targetCountAdjustment>5</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>AYKalePowder</li>
          </thingDefs>
        </filter>
        <count>125</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>AYKalePowder</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <AYKaleTea>5</AYKaleTea>
    </products>
    <recipeUsers>
      <li>AYApothecaryTable</li>
      <li>Campfire</li>
      <li>FueledStove</li>
      <li>ElectricStove</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>3</Intellectual>
    </skillRequirements>
    <researchPrerequisite>AYTeas</researchPrerequisite>
  </RecipeDef>
</Defs>